@using EPiServer.Cms.Shell
@model List<EPiServer.Core.IContent>

<section id="breadcrumb">
    <div>
        <span>
            @Html.Raw(IgnobilisService.Instance.Settings.Functionality.BreadCrumb.Message)
            @foreach (var item in Model.Select((value, i) => new { value, i }))
            {
                if (item.i + 1 < Model.Count)
                {
                    <span><a href="@item.value.PublicUrl()">@item.value.Name</a></span>
                    <span>@Html.Raw(IgnobilisService.Instance.Settings.Functionality.BreadCrumb.Seperator)</span>
                }
                else
                {
                    <span>@item.value.Name</span>
                }
            }
        </span>
    </div>
</section>
